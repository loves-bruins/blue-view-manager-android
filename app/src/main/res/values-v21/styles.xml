<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!-- Text Appearance -->
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_900</item>
    </style>

    <style name="TextAppearance.SuperLarge" parent="TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.ExtraLarge" parent="TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Large" parent="TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Large.Bold" parent="TextAppearance.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Medium.Bold" parent="TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Small.Bold" parent="TextAppearance.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert"></style>

    <!-- Styles brought over from workspace-android application -->
    <style name="TransparentDialog" parent="AppTheme">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/color_alpha_100</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/grey_900</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlActivated">@color/color_white</item>
    </style>

    <style name="ProgressStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined" />

    <style name="TextButton" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
